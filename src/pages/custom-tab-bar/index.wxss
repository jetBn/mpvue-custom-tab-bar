.tab-bar {
  position: fixed;
  just-content:space-between;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  overflow: visible;
  z-index:999;
 box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
}
.tab-bar-container{
  width:100%;
  display:flex;
  just-content:space-between;
  overflow: visible;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
.tab-bar-icon{
   width: 56rpx;
    height: 56rpx;
}
.tab-bar-text{
  font-size:20rpx;
}
.special-wrapper{
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  top: -36rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
  z-index:99;
  overflow:hidden;
  display:flex;
  justify-content:center;
  align-items: center;
  box-shadow: #666 0rpx 0rpx 6rpx;
}
.special-wrapper .tabbar_icon{
    width: 84rpx;
    height: 84rpx;
}
.special-text-wrapper{
  width: 56rpx;
  height: 56rpx;
}
